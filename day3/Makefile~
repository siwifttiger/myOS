TOOLPATH = ../z_tools/
INCPATH  = ../z_tools/haribote/
###################################################
MAKE     = make -r
NASK     = $(TOOLPATH)nask.exe
CC1      = $(TOOLPATH)cc1.exe -I$(INCPATH) -Os -Wall -quiet
GAS2NASK = $(TOOLPATH)gas2nask.exe -a
OBJ2BIM  = $(TOOLPATH)obj2bim.exe
BIM2HRB  = $(TOOLPATH)bim2hrb.exe
RULEFILE = $(TOOLPATH)haribote/haribote.rul
EDIMG    = $(TOOLPATH)edimg.exe
IMGTOL   = $(TOOLPATH)imgtol.com
COPY     = cp
DEL      = rm 
###################################################
# ÉfÉtÉHÉãÉgìÆçÏ

default :
	$(MAKE) img

# ÉtÉ@ÉCÉãê∂ê¨ãKë•

WangOS_day3_d.bin : WangOS_day3_d.nas Makefile
	$(NASK) WangOS_day3_d.nas WangOS_day3_d.bin WangOS_day3_d.lst

wangsg.bin : wangsg.nas Makefile
	$(NASK) wangsg.nas wangsg.bin wangsg.lst

bootpack.gas : bootpack.c Makefile
	$(CC1) -o bootpack.gas bootpack.c

bootpack.nas : bootpack.gas Makefile
	$(GAS2NASK) bootpack.gas bootpack.nas

bootpack.obj : bootpack.nas Makefile
	$(NASK) bootpack.nas bootpack.obj bootpack.lst

bootpack.bim : bootpack.obj Makefile
	$(OBJ2BIM) @$(RULEFILE) out:bootpack.bim stack:3136k map:bootpack.map \
		bootpack.obj
# 3MB+64KB=3136KB

bootpack.hrb : bootpack.bim Makefile
	$(BIM2HRB) bootpack.bim bootpack.hrb 0
##################################################
haribote.sys : wangsg.bin bootpack.hrb Makefile
	cat  wangsg.bin bootpack.hrb>haribote.sys
###################################################
haribote.img : WangOS_day3_d.bin haribote.sys Makefile
	$(EDIMG)   imgin:../z_tools/fdimg0at.tek \
		wbinimg src:WangOS_day3_d.bin len:512 from:0 to:0 \
		copy from:haribote.sys to:@: \
		imgout:haribote.img

# ÉRÉ}ÉìÉh

img :
	$(MAKE) haribote.img
#################################################
run :
	$(MAKE) img
	qemu-system-i386 -fda haribote.img
###################################################


clean :
	-$(DEL) *.bin
	-$(DEL) *.lst
	-$(DEL) *.gas
	-$(DEL) *.obj
	-$(DEL) bootpack.nas
	-$(DEL) bootpack.map
	-$(DEL) bootpack.bim
	-$(DEL) bootpack.hrb
	-$(DEL) haribote.sys

src_only :
	$(MAKE) clean
	-$(DEL) haribote.img

